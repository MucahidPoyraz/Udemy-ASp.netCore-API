@model List<Udemy.ConsumeAPI.ResponseModels.ProductResponseModel>
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>MVC Works</title>
</head>
<body>
	<a asp-action="Create" asp-controller="Home">Yeni Ürün Ekle</a>
	<table>
		<tr>
			<th>Ürün Adı</th>
			<th>Ürün Fiyatı</th>
			<th>Aksiyon</th>
		</tr>

		@{
			if (Model != null)
			{
				@foreach (var product in Model)
				{
					<tr>
						<td>@product.Name</td>
						<td>@product.Price</td>
						<td>
							<a asp-action="Update" asp-controller="Home" asp-route-id="@product.Id">Guncelle</a>
							<a asp-action="Remove" asp-controller="Home" asp-route-id="@product.Id">Sil</a>
						</td>
					</tr>
				}

			}
		}



	</table>

</body>
</html>
